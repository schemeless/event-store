{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "lib": ["es7"],
    "module": "commonjs",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
