{
    "compilerOptions": {
        "declaration": true,
        "target": "es6",
        "lib": [
            "es7"
        ],
        "module": "commonjs",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "paths": {
            "@schemeless/*": [
                "../*/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}